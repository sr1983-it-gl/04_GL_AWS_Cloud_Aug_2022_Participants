<head>

  <style>

    .center {
      border: 5px solid;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      padding: 10px;
    }    

    h3{
      font-family: Tahoma, Geneva, sans-serif;
    }

    table {
      border-collapse: collapse;
      font-family: Tahoma, Geneva, sans-serif;
    }

    table td {
      padding: 15px;
    }

    table thead td {
      background-color: #54585d;
      color: #ffffff;
      font-weight: bold;
      font-size: 13px;
      border: 1px solid #54585d;
    }

    table tbody td {
      color: #636363;
      border: 1px solid #dddfe1;
    }

    table tbody tr {
      background-color: #f9fafb;
    }

    table tbody tr:nth-child(odd) {
      background-color: #ffffff;
    }
  </style>
</head>

<body>

  <div class="center">

    <h3>NodeJS App - System Statistics</h3>
    <table class="table table-striped table-primary">
      
      <thead>
        <tr>
          <% systemStatsDisplayHeaders.forEach(function(systemStatsDisplayHeaderData){ %>
            <th>
              <%= systemStatsDisplayHeaderData %>
            </th>
            <% }) %>
        </tr>
      </thead>
  
      <tbody>
        <% systemStatsObjPropDisplayNames.forEach(function(systemStatsObjPropDisplayName, index){ %>
  
          <% const systemStatsPropName = systemStatsPropNames[index]; %>
          <tr>
              <td>
                <%=systemStatsObjPropDisplayName %>
              </td>
  
              <td>
                <%=systemStatsObj[systemStatsPropName] %>
              </td>
          </tr>    
  
          <% })%>
      </tbody>
    </table>

  </div>

</body>